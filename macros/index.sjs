operator (|>) 1 left { $l, $r } => #{
  $r($l)
}

operator (<|) 1 right { $l, $r } => #{
  $l($r)
}

operator (->>) 18 right { $f, $g } => #{
  (function(a){ return $g($f(a)) })
}

operator (<<-) 18 left { $f, $g } => #{
  (function(a){ return $f($g(a)) })
}

macro (@) {
  rule infix { $a:expr | $b $c:expr (,) ... } => {
    $b($a, $c (,) ...)
  }
}

