operator (>>=) 12 left { $l, $r } => #{
  $l.chain($r)
}

operator (=<<) 12 right { $l, $r } => #{
  $r.chain($l)
}

operator (>=>) 12 right { $f, $g } => #{
  (function(a){ return $f(a) >>= $g })
}

operator (<=<) 12 right { $f, $g } => #{
  (function(a){ return $g(a) >>= $f })
}

